generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  passwordHash  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relacionamentos
  tasks         Task[]
  goals         Goal[]
  habits        Habit[]
  aiInsights    AIInsight[]
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean   @default(false)
  dueDate     DateTime?
  createdAt   DateTime  @default(now())

  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model Goal {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  targetDate  DateTime?
  achieved    Boolean   @default(false)
  createdAt   DateTime  @default(now())

  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model Habit {
  id          Int       @id @default(autoincrement())
  name        String
  frequency   String    // daily, weekly, etc.
  streak      Int       @default(0)
  lastTracked DateTime?
  createdAt   DateTime  @default(now())

  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model AIInsight {
  id          Int       @id @default(autoincrement())
  content     String
  createdAt   DateTime  @default(now())

  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}
